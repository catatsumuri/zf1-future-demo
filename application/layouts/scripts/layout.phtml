    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f7f8fa;
        }
        .panel-feature .panel-heading {
            font-size: 16px;
        }
        footer {
            margin-top: 48px;
            padding: 24px 0;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <?php
        $auth = Zend_Auth::getInstance();
        $identity = $auth->hasIdentity() ? $auth->getIdentity() : null;
        $displayName = '';

        if (is_array($identity)) {
            $displayName = (string) ($identity['name'] ?? $identity['email'] ?? '');
        } elseif (is_object($identity)) {
            if (property_exists($identity, 'name')) {
                $displayName = (string) $identity->name;
            } elseif (property_exists($identity, 'email')) {
                $displayName = (string) $identity->email;
            }
        }

        /** @var Zend_Controller_Action_Helper_FlashMessenger $flashHelper */
        $flashHelper = $this->flashMessenger();
        $rawMessages = array_merge($flashHelper->getMessages(), $flashHelper->getCurrentMessages());
        $flashHelper->clearCurrentMessages();

        $preparedMessages = [];

        foreach ($rawMessages as $message) {
            if (is_array($message)) {
                foreach ($message as $type => $text) {
                    $preparedMessages[] = [
                        'type' => (string) $type,
                        'text' => (string) $text,
                    ];
                }

                continue;
            }

            $preparedMessages[] = [
                'type' => 'info',
                'text' => (string) $message,
            ];
        }
    ?>
    <nav class="navbar navbar-default navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">ZF1 Future Demo</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/test">Test</a></li>
                <?php if ($displayName !== '') : ?>
                    <li class="navbar-text hidden-sm hidden-xs">ようこそ、<?php echo $this->escape($displayName); ?> さん</li>
                    <li class="navbar-text hidden-md hidden-lg">ようこそ、<?php echo $this->escape($displayName); ?> さん</li>
                    <li><a href="/auth/logout">Log out</a></li>
                <?php else : ?>
                    <li><a href="/auth/login">Log in</a></li>
                <?php endif; ?>
            </ul>
        </div>
    </nav>
    <main class="container">
        <?php foreach ($preparedMessages as $message) : ?>
            <?php
                $bootstrapTypeMap = [
                    'success' => 'success',
                    'info' => 'info',
                    'warning' => 'warning',
                    'error' => 'danger',
                ];
                $type = strtolower($message['type']);
                $alertClass = $bootstrapTypeMap[$type] ?? 'info';
            ?>
            <div class="alert alert-<?php echo $this->escape($alertClass); ?> alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <?php echo $this->escape($message['text']); ?>
            </div>
        <?php endforeach; ?>
        <?php echo $this->layout()->content; ?>
    </main>
    <footer class="container text-center">
        <p>Built with <a href="https://packagist.org/packages/shardj/zf1-future" target="_blank" rel="noopener">zf1-future</a> &amp; Docker Compose.</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>
    <script>
        // Highlight active navigation item based on pathname
        $(function () {
            var path = window.location.pathname.replace(/\/$/, '') || '/';
            $('.navbar-nav a').each(function () {
                var href = $(this).attr('href');
                if (href === path) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
</body>
</html>
